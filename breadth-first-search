class BFS:
    def __init__(self, graph, root):
        self.graph = graph
        self.visited = dict()
        self.queue = list()
        self.counter = 0
        self.visited[root.UID] = root
        self.queue.append(root)

    def run(self, target):
        
        r = self.queue.pop()
        if r.is_equal(target):
            return True, self.counter, r.step
        self.queue.append(r)

        while self.queue:
            current_node = self.queue.pop(0)
            for n in self.graph.reveal_neighbors(current_node):
                if n.UID not in self.visited:
                    if n.is_equal(target):
                        return True, self.counter, n.step
                    self.queue.append(n)
                    self.visited[n.UID] = n
                    self.counter += 1

        return False
        
        
        
     
        
