import queue as Q


class UCS:
    def __init__(self, graph, root):
        self.graph = graph
        self.visited = dict()
        self.queue = Q.PriorityQueue()
        self.counter = 0
        self.visited[root.UID] = root
        self.queue.put((root.UID, root, root.step))

    def run(self, target):
    
       r = self.queue.get()[1]
        if r.is_equal(target):
            return True, self.counter,r.step
        self.counter += 1
        self.queue.put((r.step, r, int(r.UID)))

        while self.queue:
            current_node = self.queue.get()[1]

            for n in self.graph.reveal_neighbors(current_node):
                if n.UID not in self.visited:
                    self.counter += 1
                    if n.is_equal(target):
                        return True, self.counter, n.step
                    self.visited[n.UID] = n
                    self.queue.put((n.step,n,int(n.UID)))

        return False
